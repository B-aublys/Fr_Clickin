{
    "name": "Clickin",
    "version": "1.0.1",
    "description": "A simple to use autoclicker",
    "author": "B-aublys",
    "permissions": ["storage", "contextMenus", "tabs"],
    "icons" :{
        "128": "./bin/images/blue.png"
    },

    "background":{
        "scripts": ["./bin/js/background.js"]
    },
    "browser_action": {
        "default_title": "Enable your clicking Powers!",
        "default_popup": "./bin/html/clicker.html"
    },
    "content_scripts": [
        {
            "matches": ["http://*/*", "https://*/*"],
            "js": ["./bin/js/contentScript.js"]
        }
    ],
    "manifest_version": 2
}